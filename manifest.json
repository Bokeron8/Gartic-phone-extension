{
    "manifest_version": 2,
  
    "name": "Gartic phone tts",
    "description": "This extension will put voice on words",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["<all_links>"],
            "js": ["content.js"]
        }
    ],
  
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "audioCapture"
    ],
    "background": {
        "scripts": [
          "auto_trigger.js"
        ],
        "persistent": false
    }
}
  
